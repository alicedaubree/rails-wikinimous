<div class="main-container">
  <div class="cards">
  <% @articles.each do |article| %>
  <% url = "https://loremflickr.com/320/240/#{article.title}"%>
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= url %>)">
    <p class="text-align-center"><%= link_to article.title, article_path(article.id) %>
    <%= link_to article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-solid fa-trash-can"></i>
    <% end%>
  </p>
  </div>
  <% end %>
  </div>
</div>
